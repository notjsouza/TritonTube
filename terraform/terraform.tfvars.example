# Copy this file to terraform.tfvars and update with your values
# NEVER commit terraform.tfvars to git (it's in .gitignore)

aws_region   = "us-west-1"
project_name = "tritontube"
environment  = "prod"

# ECS Configuration
container_image  = "992382698108.dkr.ecr.us-west-1.amazonaws.com/tritontube-backend:latest" # Update after ECR push
container_cpu    = 512
container_memory = 1024
desired_count    = 2

# Worker Configuration
worker_image         = "" # Optional: defaults to <ecr-repo>:worker
worker_cpu           = 512
worker_memory        = 1024
worker_desired_count = 0  # Initial count; autoscaling takes over immediately
worker_min_count     = 0  # 0 = scale to zero when queue is empty
worker_max_count     = 5  # Cap concurrent FFmpeg tasks (each uses ~512 CPU units)

# Auto Scaling
enable_autoscaling = true
min_capacity       = 2
max_capacity       = 10

# Networking
vpc_cidr = "10.0.0.0/16"
